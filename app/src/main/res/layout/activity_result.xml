<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="net.aehdev.randomsentinels.ResultActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
                android:id="@+id/hero_card"
                style="@style/ResultCard"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="@dimen/card_content_padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        style="@style/ResultHeader"
                        android:text="@string/heroes"/>

                <View style="@style/Divider"/>

                <TextView
                        style="@style/ResultItem.Hero"
                        android:id="@+id/result_hero_1"
                        android:text="Legacy"/>

                <TextView
                        style="@style/ResultItem.Hero"
                        android:id="@+id/result_hero_2"
                        android:text="Tachyon"/>

                <TextView
                        style="@style/ResultItem.Hero"
                        android:id="@+id/result_hero_3"
                        android:text="Bunker"/>

                <TextView
                        style="@style/ResultItem.Hero"
                        android:id="@+id/result_hero_4"
                        android:visibility="gone"
                        android:text="Wraith"/>

                <TextView
                        style="@style/ResultItem.Hero"
                        android:id="@+id/result_hero_5"
                        android:visibility="gone"
                        android:text="Tempest"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/villain_card"
                style="@style/ResultCard"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="@dimen/card_content_padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        style="@style/ResultHeader"
                        android:text="@string/villain"/>

                <View style="@style/Divider"/>

                <TextView
                        style="@style/ResultItem.Villain"
                        android:id="@+id/result_villain"
                        android:text="Miss Information"/>

                <TextView
                        style="@style/ResultItem.Villain"
                        android:id="@+id/result_vengeful_1"
                        android:visibility="gone"/>

                <TextView
                        style="@style/ResultItem.Villain"
                        android:id="@+id/result_vengeful_2"
                        android:visibility="gone"/>

                <TextView
                        style="@style/ResultItem.Villain"
                        android:id="@+id/result_vengeful_3"
                        android:visibility="gone"/>

                <TextView
                        style="@style/ResultItem.Villain"
                        android:id="@+id/result_vengeful_4"
                        android:visibility="gone"/>

                <TextView
                        style="@style/ResultItem.Villain"
                        android:id="@+id/result_vengeful_5"
                        android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/environment_card"
                style="@style/ResultCard"
                card_view:cardCornerRadius="0dp"
                card_view:contentPadding="@dimen/card_content_padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                        style="@style/ResultHeader"
                        android:text="@string/environment"/>

                <View style="@style/Divider"/>

                <TextView
                        style="@style/ResultItem.Environment"
                        android:id="@+id/result_environment"
                        android:text="Pike Industrial Complex"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>