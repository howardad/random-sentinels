<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Palette colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/icons</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/primary_light</item>
    </style>

    <!-- Result section headers -->
    <style name="ResultHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResultItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="fontPath">fonts/Bangers.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/primary_light</item>
    </style>
</resources>
